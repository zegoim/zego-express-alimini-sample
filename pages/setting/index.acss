/* pages/setting/index.wxss */
.settings{
  height: 65vh;
  color:gray;
}
.items{
  margin-top:2vw;

}
.items input{
  background-color:#fff;
  height:10vw;
  margin:2vw 0vw;
  border: 1px solid gray;
}
.items label{
   font-size: 40rpx;
}

.handler {
  width: 100vw;
  height: 60vw;
  display: block;
  position: relative;
  text-align: center;
}

.buttonGroup button {
  width: 25vw;
  height: 15vw;
  text-align: center;
  vertical-align: middle;
  background-color: rgba(13, 112, 255, 0.8);
  color: aliceblue;
  display: inline-block;
}

.buttonGroup button:hover {
  background-color: rgba(0, 97, 243, 0.8);
}

.btn-block {
margin:2vw 0vw 0vw 2vw;
}

switch {
  margin:2vw 0vw 0vw 2vw;

}